public class Mosca {
  public static void main (String [] pps) {
      String frase = new String ("Una mosca parada en la pared, en la pared      "); //Creo que sin querer le borre unos espacios y ya no supe cuantos eran originalmente.
    String frase1, frase2, frase3, frase4, frase5;
  
    System.out.println("Cadena original: \"" + frase + "\""); //imprime la cadena original
    //Imprimir la longitud de la cadena
    System.out.println("Longitud de la cadena: "+ frase.length() );  //Cuenta caracteres de la cadena

    frase1 = frase.trim();  // Eliminar los blancos al final de la frase
    System.out.println("Longitud de la cadena sin espacios: "+ frase1.length() ); //LENGTH cuenta los espacios
  
    frase2 = frase.toUpperCase(); //Poner la frase1 en mayÃºsculas
    frase3 = frase1 + " PINTADA DE ROJO";  // Agregar la frase1 PINTADA DE ROJO (En el pdf dice que la aÃ±ada a la frase original pero aquÃ­ dice que la agregue a la frase1 entonces optÃ© por hacerle caso a esta.
    

    // Imprimir cada "mutacion" de la cadena
    System.out.println("Frase #1: " + frase1);
    System.out.println("Frase #2: " + frase2);
    System.out.println("Frase #3: " + frase3);
  }
